{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "version": "1.0.4",
    "manifestVersion": "1.16",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "name": {
        "short": "SalesforceHelperdev",
        "full": "SalesForce Helper Bot for Microsoft Teams"
    },
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/termofuse"
    },
    "description": {
        "short": "Help users fetch data from Salesforce",
        "full": "Help users fetch data from Salesforce related to their accounts, contacts, and opportunities"
    },
    "icons": {
        "outline": "outline.png",
        "color": "color.png"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal",
                "team",
                "groupchat"
            ],
            "isNotificationOnly": false,
            "supportsCalling": false,
            "supportsVideo": false,
            "supportsFiles": false
        }
    ],
    "composeExtensions": [
        {
            "botId": "${{BOT_ID}}",
            "commands": [
                {
                    "id": "getAccountDetails",
                    "type": "query",
                    "title": "Get Account Details",
                    "description": "Get details of accounts from SalesForce",
                    "initialRun": false,
                    "fetchTask": false,
                    "context": [
                        "compose",
                        "commandBox"
                    ],
                    "parameters": [
                        {
                            "name": "Account",
                            "title": "Account Name",
                            "description": "Account whose details needs to be fetched",
                            "inputType": "text"
                        }
                    ]
                },
                {
                    "id": "getAccountOpportunities",
                    "type": "query",
                    "title": "Lookup Account Opportunities",
                    "description": "Lookup opportunities within an account",
                    "initialRun": false,
                    "fetchTask": false,
                    "context": [
                        "compose",
                        "commandBox"
                    ],
                    "parameters": [
                        {
                            "name": "Account",
                            "title": "Account",
                            "description": "Name of the Account whose opportunities need to be looked up",
                            "inputType": "text"
                        }
                    ]
                },
                {
                    "id": "getOpportunitiesByOwner",
                    "type": "query",
                    "title": "Opportunity Search by Owner",
                    "description": "Lookup opportunities across accounts by owner",
                    "initialRun": false,
                    "fetchTask": false,
                    "context": [
                        "compose",
                        "commandBox"
                    ],
                    "parameters": [
                        {
                            "name": "Account Owner to be searched for opportunities",
                            "title": "Account Owner",
                            "description": "Name of the Account Owner whose opportunities need to be looked up",
                            "inputType": "text"
                        }
                    ]
                }
            ]
        }
    ],
    "validDomains": [
        "token.botframework.com",
        "*.my.salesforce.com",
        "*.lightning.force.com",
        "${{BOT_DOMAIN}}"
    ],
    "webApplicationInfo": {
        "id": "${{BOT_ID}}",
        "resource": "api://${{BOT_ID}}"
    }
}